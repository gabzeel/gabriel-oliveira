---
import "../../styles/global.css";
import { BaseHead } from "../BaseHead";
import Footer from "../Footer";
import Header from "../Header";

const { title, description, imageUrl } = Astro.props;

const currentPath = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const resolvedCanonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedPageUrl = Astro.url.toString();
const resolvedGenerator = Astro.generator;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      imageUrl={imageUrl}
      canonicalUrl={resolvedCanonicalUrl}
      pageUrl={resolvedPageUrl}
      generator={resolvedGenerator}
    />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header client:load currentPath={currentPath} />
    <div class="flex-1 min-h-0 pt-16">
      <slot />
    </div>
    <Footer />
  </body>
</html>
