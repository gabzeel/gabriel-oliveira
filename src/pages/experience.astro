---
import { ExperienceTimeline } from "@/components/experience/experience-timeline";
import BaseLayout from "../components/layouts/BaseLayout.astro";
import { ArrowLeft } from "lucide-react";

const title = "Experiencias";
const description = "Lugares que o Gabriel já trabalhou";
---

<BaseLayout title={title} description={description}>
  <main class="mx-auto w-full max-w-4xl px-4 py-10">
    <div class="mb-8">
      <a
        href="/"
        class="inline-flex items-center gap-1.5 text-sm text-muted-foreground transition-colors hover:text-foreground"
      >
        <ArrowLeft className="size-3.5" />
        Voltar
      </a>
    </div>

    <header class="mb-12">
      <h1
        class="text-3xl font-bold tracking-tight text-foreground text-balance"
      >
        Experiências
      </h1>
      <p
        class="mt-2 text-base leading-relaxed text-muted-foreground text-pretty"
      >
        Lista completa e detalhada de todas as minhas experiências
        profissionais.
      </p>
    </header>

    <ExperienceTimeline client:load />
  </main>
</BaseLayout>
